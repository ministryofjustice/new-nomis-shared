{
  "engines": {
    "npm": ">=3"
  },
  "author": "HMPPS",
  "license": "UNLICENSED",
  "dependencies": {
    "@govuk-react/constants": "^0.5.1",
    "@govuk-react/header": "^0.5.1",
    "css-loader": "^1.0.0",
    "emotion": "9.2.12",
    "file-loader": "^3.0.1",
    "govuk-colours": "^1.0.3",
    "govuk-elements-sass": "^3.1.2",
    "govuk_frontend_toolkit": "^7.5.0",
    "moment": "^2.22.2",
    "node-sass": "^4.9.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-emotion": "9.2.12",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addons": "3.4.11",
    "@storybook/react": "^3.4.11",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "7",
    "babel-runtime": "^6.26.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "path": "^0.12.7",
    "prettier": "^1.14.3",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.7.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook -o docs",
    "test": "jest --env=jsdom",
    "test-watch": "jest --env=jsdom --watchAll",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "verify": "yarn lint && yarn test",
    "build": "webpack --mode production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build-storybook && lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css,md}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "package.json"
    ]
  },
  "pre-commit": [
    "verify"
  ],
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/**//**/*test.{js,jsx,mjs}"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest",
      "^.+\\.css$": "<rootDir>/jest-transforms/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/jest-transforms/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ]
  }
}
